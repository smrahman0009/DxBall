<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0272A6"
    tools:context=".Help">

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:background="#0272A6"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:ems="10"
        android:filterTouchesWhenObscured="false"
        android:inputType="none"
        android:text="To move the bar to the right side you should touch the right side of
                      the screen . And  move to the left side, touch the left side of the screen.
                      if the ball collide with the floor of the gameplay you will lose one
                      life .There are total three levels. To go to the next level you have
                      to earn some certain points.Now enjoy!!!!!!."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>